plugins {
    id 'java-library'
    id 'application'
}

java {
    sourceCompatibility = JavaVersion.VERSION_1_8
    targetCompatibility = JavaVersion.VERSION_1_8
}

repositories {
    mavenLocal()
    mavenCentral()
}

dependencies {

    // import a BOM
    implementation platform('com.symphony.platformsolutions:symphony-bdk-bom:1.2.0-SNAPSHOT')

    // define dependencies without versions
    implementation 'com.symphony.platformsolutions:symphony-bdk-core'
    implementation 'com.symphony.platformsolutions:symphony-bdk-core-invoker-jersey2'

    implementation 'ch.qos.logback:logback-classic'
}

application {
    mainClass = '<%= basePackage %>.BotApplication'
}

version = '1.0.0-SNAPSHOT'